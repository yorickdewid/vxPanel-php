<div class="zmodule_content panel" id="zmodule_header_<@ ModuleName @>">
    <div class="panel-heading">
        <img src="<@ ModuleIcon @>" width="35" height="35" border="0" alt="<@ ModuleName @>">

        <div class="zmodule_title">
            <@ ModuleName @>
        </div>

        <div class="zmodule_desc" id="zmodule_desc_<@ ModuleName @>"><@ ModuleDesc @></div>

    </div>
    <div>
        <@ currentCreditBalance @>
        <br>
        <br>
    </div>
    <% if hasWallet %>
    <div>
        <p>Transaction history:<br></p>
        <table class="table">
            <@ TransactionLog @>
        </table>
    </div>
    <% endif %>
     <div>
        <form action="./?module=credits&action=AddFunds" method="post">
            <table>
                <tr valign="top">
                    <td><button class="button-loader btn btn-primary" type="submit" id="button" name="inAdd" value="1">Add Funds</button>
                </tr>
            </table>
        </form>
    </div>
</div>

